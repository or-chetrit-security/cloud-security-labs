{
  "Description": "Comprehensive PII protection across multiple data types",
  "Version": "2021-06-01",
  "Statement": [
    {
      "Sid": "comprehensive-pii-audit",
      "DataDirection": "Inbound",
      "DataIdentifier": [
        "arn:aws:dataprotection::aws:data-identifier/CreditCardNumber",
        "arn:aws:dataprotection::aws:data-identifier/SSN",
        "arn:aws:dataprotection::aws:data-identifier/PhoneNumber-US",
        "arn:aws:dataprotection::aws:data-identifier/EmailAddress",
        "arn:aws:dataprotection::aws:data-identifier/Name"
      ],
      "Operation": {
        "Audit": {
          "FindingsDestination": {
            "CloudWatchLogs": {
              "LogGroup": "/aws/vendedlogs/sns-comprehensive-audit"
            }
          },
          "SampleRate": "100"
        }
      },
      "Principal": ["*"]
    },
    {
      "Sid": "selective-masking",
      "DataDirection": "Outbound",
      "DataIdentifier": [
        "arn:aws:dataprotection::aws:data-identifier/CreditCardNumber",
        "arn:aws:dataprotection::aws:data-identifier/SSN"
      ],
      "Operation": {
        "Deidentify": {
          "MaskConfig": {
            "MaskWithCharacter": "*"
          }
        }
      },
      "Principal": ["*"]
    },
    {
      "Sid": "contact-redaction",
      "DataDirection": "Outbound",
      "DataIdentifier": [
        "arn:aws:dataprotection::aws:data-identifier/PhoneNumber-US",
        "arn:aws:dataprotection::aws:data-identifier/EmailAddress"
      ],
      "Operation": {
        "Deidentify": {
          "RedactionConfig": {}
        }
      },
      "Principal": ["*"]
    }
  ],
  "Name": "enterprise-pii-protection"
}
